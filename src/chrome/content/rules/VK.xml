<!--
	Other VK rulesets:

		- userapi.com.xml
		- VK.me.xml
		- VKontakte.ru.xml

-->
<ruleset name="VK.com">

	<target host="vk.com" />
	<target host="login.vk.com" />
	<target host="m.vk.com" />
	<target host="pp.vk.com" />
	<target host="www.vk.com" />

	<!-- https://github.com/EFForg/https-everywhere/issues/9576 -->
	<exclusion pattern="^http://vk\.com/away\.php\?to=" />
	<test url="http://vk.com/away.php?to=" />

	<securecookie host=".+" name=".+" />

	<rule from="^http:"
		to="https:" />

</ruleset>
