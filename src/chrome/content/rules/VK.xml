<!--
	Other VK rulesets:

		- userapi.com.xml
		- VK.me.xml
		- VKontakte.ru.xml

	Self-signed:
		- pp.vk.com
-->
<ruleset name="VK.com">

	<target host="vk.com" />
	<target host="login.vk.com" />
	<target host="m.vk.com" />
	<target host="www.vk.com" />

	<!--
		securecookie rule breaks external links:
		https://github.com/EFForg/https-everywhere/issues/9576
		<securecookie host=".+" name=".+" />
	-->
	<exclusion pattern="^http://vk\.com/away\.php\?to=" />
	<test url="http://vk.com/away.php?to=" />
	<test url="http://vk.com/away.php?to=http%3A%2F%2Fwww.eff.org%2F" />

	<rule from="^http:"
		to="https:" />

</ruleset>
